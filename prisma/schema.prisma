generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  role     String  @default("user")
}

model Sweet {
  id       Int     @id @default(autoincrement())
  name     String
  category String
  price    Float
  quantity Int
}